<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe0e0e0" >

     <TextView
        android:text="..Glimpses.."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="160px"
        android:textColor="@android:color/black"
        android:fontFamily="cursive"
        android:textAlignment="center" 
        />

    <ImageView
        android:src="@drawable/img_3259"
        android:layout_width="match_parent"
        android:layout_height="120.9dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="200.0dp" 
        
     />
   
     <ImageView
        android:src="@drawable/img_3272"
        android:layout_width="match_parent"
        android:layout_height="120.9dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/imageView3" 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100.0dp"
    />
     <ImageView
        android:src="@drawable/img_3311"
        android:layout_width="match_parent"
        android:layout_height="120.9dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/imageView4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="200.0dp" 
        
     />
   
     <ImageView
        android:src="@drawable/img_3324"
        android:layout_width="match_parent"
        android:layout_height="120.9dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/imageView6" 
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100.0dp"
    />

     <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHpage"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="0.0dp"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:backgroundTint="#14248A" />

</LinearLayout>
