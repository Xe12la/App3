<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffcc80" >

    <TextView
        android:text="..All About ME.."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="160px"
        android:textColor="@android:color/black"
        android:fontFamily="cursive"
        android:textAlignment="center" 
        />

     <EditText
        android:text="Hobbies:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180px"
        android:layout_marginRight="800px"
        android:textSize="100px"
        android:id="@+id/editText1" 
        
        />
    <TextView
        android:text="Watching Disney Movie."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" 
        android:layout_marginLeft="250px"
        android:fontFamily="sans-serif-condensed"
        android:textSize="80px"        
        />
    <TextView
        android:text="Reading Books, News and MEME."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" 
        android:layout_marginLeft="250px"
        android:fontFamily="sans-serif-condensed"
        android:textSize="80px"        
        />
    <TextView
        android:text="Riding bicycle."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" 
        android:layout_marginLeft="250px"
        android:fontFamily="sans-serif-condensed"
        android:textSize="80px"        
        />


    <EditText
        android:text="Birthdate:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180px"
        android:layout_marginRight="750px"
        android:textSize="100px"
        android:id="@+id/editText2" 
        
        />

    <TextView
        android:text="May 23, 1999"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" 
        android:layout_marginLeft="250px"
        android:fontFamily="sans-serif-condensed"
        android:textSize="80px"        
        />


    <EditText
        android:text="Zodiac Sign:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180px"
        android:layout_marginRight="600px"
        android:textSize="100px"
        android:id="@+id/editText3" 
        />

    <TextView
        android:text="Gemini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" 
        android:layout_marginLeft="250px"
        android:textSize="80px"        
        />



    <ImageView
        android:src="@drawable/gemini"
        android:layout_width="wrap_content"
        android:layout_height="136.3dp"
        android:id="@id/imageView1"
        android:layout_marginLeft="90.0dp"
        android:layout_marginRight="90.0dp" 
        />
   <Button
        android:text="Next >"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMENext"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="0.0dp"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="0.0dp"
        android:backgroundTint="#14248A"  
        
        />

</LinearLayout>
